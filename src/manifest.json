{
  "manifest_version": 3,
  "name": "Stream Keys - Video Keyboard Controls",
  "description": "Keyboard shortcuts and position restore for YouTube, Disney+, and HBO Max video players.",
  "version": "0.0.0",
  "icons": {
    "16": "logo/StreamKeys_16.png",
    "32": "logo/StreamKeys_32.png",
    "48": "logo/StreamKeys_48.png",
    "128": "logo/StreamKeys_128.png"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "permissions": ["webNavigation", "scripting", "storage"],
  "host_permissions": [
    "https://*.disneyplus.com/*",
    "https://*.hbomax.com/*",
    "https://*.youtube.com/*"
  ],
  "options_page": "src/settings/settings.html",
  "action": {},
  "web_accessible_resources": [
    {
      "resources": ["src/services/*.js"],
      "matches": ["https://*.disneyplus.com/*", "https://*.hbomax.com/*", "https://*.youtube.com/*"]
    }
  ]
}
