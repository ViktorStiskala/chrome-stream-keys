---
import { Icon } from "astro-icon/components";
import Card from "../primitives/Card.astro";

interface Props {
  title: string;
  description?: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<Card interactive elevated>
  {icon && <Icon name={icon} class="w-8 h-8 mb-4 text-accent" />}
  <h3 class="text-lg font-semibold mb-2 font-display text-text">
    {title}
  </h3>
  {
    description && (
      <p class="text-sm text-text-muted leading-relaxed">{description}</p>
    )
  }
  <slot />
</Card>
